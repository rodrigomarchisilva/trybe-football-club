{
  "openapi": "3.0.0",
  "info": {
    "title": "Football Club API",
    "description": "This project is from Trybe's course, Module 3 - Back-end Development. Its main goal is to practice TypeScript with the Sequelize ORM, and build a docker-compose for a full-stack application. It provides information about football matches and classifications. I'm responsible for the whole backend, its tests and the database, as well as the docker-compose for the whole application. Trybe provided the frontend.",
    "termsOfService": "http://localhost:3001/terms",
    "contact": {
      "name": "Rodrigo Marchi Silva",
      "url": "https://rodrigomarchisilva.github.io/",
      "email": "rodrigomarchisilva@hotmail.com"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3001",
      "description": "Development server"
    }
  ],
  "paths": {
    "/login": {
      "post": {
        "summary": "User login",
        "description": "Login to the application",
        "tags": ["Login"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Login"
              },
              "example": {
                "email": "user@gmail.com",
                "password": "123456"
              }
        }}},
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "user": {
                      "$ref": "#/components/schemas/User"
                    },
                    "token": {
                      "type": "string"
                    }
                }},
                "example": {
                  "user": {
                    "id": 1,
                    "username": "user",
                    "role": "admin",
                    "email": "user@gmail.com"
                  },
                  "token": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJlbWFpbCI6InVzZXJAZ21haWwuY29tIiwiaWF0IjoxNTE2MjM5MDIyfQ.-oOnIIT3EkPugmH9HSJckZtKm4W8LaMf0F1x-NMvLQw"
          }}},
          "401": {
            "description": ["Incorrect email or password", "All fields must be filled"]
          }
        }
    }}},
    "/login/validate": {
      "post": {
        "summary": "Validate token",
        "description": "Validate token",
        "tags": ["Login"],
        "parameters": [{
          "in": "header",
          "name": "Authorization",
          "description": "Token",
          "schema": {
            "type": "string"
          },
          "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJlbWFpbCI6InVzZXJAZ21haWwuY29tIiwiaWF0IjoxNTE2MjM5MDIyfQ.-oOnIIT3EkPugmH9HSJckZtKm4W8LaMf0F1x-NMvLQw",
          "required": true
        }],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "string"
                },
                "example": "admin"
          }}},
          "401": {
            "description": ["Invalid token", "Token not found", "Email not found"]
          }
        }
    }},
    "/clubs": {
      "get": {
        "summary": "Get all clubs",
        "description": "Get all clubs",
        "tags": ["Clubs"]
      }
    },
    "/clubs/{id}": {
      "get": {
        "summary": "Get a club",
        "description": "Get a club",
        "tags": ["Clubs"]
      }
    },
    "/matches": {
      "get": {
        "summary": "Get all matches",
        "description": "Get all matches",
        "tags": ["Matches"],
        "parameters": [
          {
            "name": "inProgress",
            "in": "query",
            "description": "Filter matches by status (e.g. 'in progress')",
            "required": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "A list of matches, filtered by status or not",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Match"
        }}}}}}
      },
      "post": {
        "summary": "Create a match",
        "description": "Create a match",
        "tags": ["Matches"]
      }
    },
    "/matches/{id}/finish": {
      "patch": {
        "summary": "Finish a match",
        "description": "Finish a match",
        "tags": ["Matches"]
      }
    },
    "/matches/{id}": {
      "patch": {
        "summary": "Update a match",
        "description": "Update a match",
        "tags": ["Matches"]
      }
    },
    "/leaderboard": {
      "get": {
        "summary": "Get leaderboard",
        "description": "Get leaderboard",
        "tags": ["Leaderboard"]
      }
    },
    "/leaderboard/home": {
      "get": {
        "summary": "Get home leaderboard",
        "description": "Get home leaderboard",
        "tags": ["Leaderboard"]
      }
    },
    "/leaderboard/away": {
      "get": {
        "summary": "Get away leaderboard",
        "description": "Get away leaderboard",
        "tags": ["Leaderboard"]
      }
    }
  },
  "components": {
    "schemas": {
      "Login": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
      }},
      "User": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "username": {
            "type": "string"
          },
          "role": {
            "type": "string"
          },
          "email": {
            "type": "string"
          }
      }},
      "Match": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "homeTeam": {
            "type": "string"
          },
          "homeTeamGoals": {
            "type": "integer"
          },
          "awayTeam": {
            "type": "string"
          },
          "awayTeamGoals": {
            "type": "integer"
          },
          "inProgress": {
            "type": "string"
          },
          "homeClub": {
            "clubName": {
              "type": "string"
            }
          },
          "awayClub": {
            "clubName": {
              "type": "string"
            }
          }
      }}
  }}
}
